[user]
  email = daniel@floppy.co
  name = Daniel Upton

[diff]
[color]
    ui = auto

[alias]
    st = status
    ci = commit
    co = checkout
    di = diff
    cp = cherry-pick
    down = pull --rebase
    head = !git r -1
    h = !git head
    hp = "!. ~/bin/githelpers && show_git_head"
    r = !GIT_NO_PAGER=1 git l -30
    ra = !git r --all
    l = "!. ~/bin/githelpers && pretty_git_log"
    la = !git l --all

[merge]
    tool = vimdiff

[github]
    user = boxofrad
[core]
  excludesfile = ~/.gitignore_global
[init]
  templatedir = ~/.git_template
[push]
	default = simple
[credential]
	helper = cache
