[general]
ui = ttyui
accounts = Rawnet, Personal
pythonfile=~/.mutt/offlineimap.py

# Work Email -------------------------------

[Account Rawnet]
localrepository = Rawnet-Local
remoterepository = Rawnet-Remote
status_backend = sqlite
postsynchook = notmuch new

[Repository Rawnet-Local]
type = Maildir
localfolders = ~/.mail/rawnet
nametrans = lambda folder: {'drafts':  '[Gmail]/Drafts',
                            'sent':    '[Gmail]/Sent Mail',
                            'flagged': '[Gmail]/Starred',
                            'trash':   '[Gmail]/Trash',
                            'archive': '[Gmail]/All Mail',
                            }.get(folder, folder)

[Repository Rawnet-Remote]
maxconnections = 1
type = Gmail
remoteuser = dupton@rawnet.com
remotepasseval = get_keychain_pass(account="dupton@rawnet.com", server="imap.gmail.com")
realdelete = no
sslcacertfile = ~/.mutt/dummycert.pem
nametrans = lambda folder: {'[Gmail]/Drafts':    'drafts',
                            '[Gmail]/Sent Mail': 'sent',
                            '[Gmail]/Starred':   'flagged',
                            '[Gmail]/Trash':     'trash',
                            '[Gmail]/All Mail':  'archive',
                            }.get(folder, folder)
folderfilter = lambda folder: folder not in ['[Gmail]/Trash',
                                             '[Gmail]/Important',
                                             '[Gmail]/Spam',
                                             '[Gmail]/Bin',
                                             '[Mailbox]',
                                             '[Mailbox]/Later',
                                             '[Mailbox]/To Buy',
                                             '[Mailbox]/To Read',
                                             '[Mailbox]/To Watch',
                                             '[Mailbox]/Links',
                                             'Deleted Messages']

