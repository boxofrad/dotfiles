[general]
ui = ttyui
accounts = Personal, Rawnet
pythonfile=~/.mutt/offlineimap.py

# Personal Email -------------------------------

[Account Personal]
localrepository = Personal-Local
remoterepository = Personal-Remote
status_backend = sqlite

[Repository Personal-Local]
type = Maildir
localfolders = ~/.mail/personal
nametrans = lambda folder: re.sub('^(?!INBOX)', 'INBOX.', folder)

[Repository Personal-Remote]
maxconnections = 1
remotepasseval = get_keychain_pass(account="dup@fea.st", server="mail.messagingengine.com")
sslcacertfile = ~/.mutt/dummycert.pem
ssl = yes
type = IMAP
remotehost = mail.messagingengine.com
remoteport = 993
remoteuser = dup@fea.st
nametrans = lambda folder: re.sub('^INBOX\.', '', folder)

# Work Email -------------------------------

[Account Rawnet]
localrepository = Rawnet-Local
remoterepository = Rawnet-Remote
status_backend = sqlite

[Repository Rawnet-Local]
type = Maildir
localfolders = ~/.mail/rawnet
nametrans = lambda folder: {'Drafts':     '[Gmail]/Drafts',
                            'Archive':    '[Gmail]/All Mail',
                            'Sent Items': '[Gmail]/Sent Mail',
                            'Trash':      '[Gmail]/Bin',
                            'Junk Mail':  '[Gmail]/Spam',}.get(folder, folder)

[Repository Rawnet-Remote]
maxconnections = 1
type = Gmail
remoteuser = dupton@rawnet.com
remotepasseval = get_keychain_pass(account="dupton@rawnet.com", server="imap.gmail.com")
realdelete = no
sslcacertfile = ~/.mutt/dummycert.pem
nametrans = lambda folder: {'[Gmail]/Drafts':    'Drafts',
                            '[Gmail]/All Mail':  'Archive',
                            '[Gmail]/Sent Mail': 'Sent Items',
                            '[Gmail]/Bin':       'Trash',
                            '[Gmail]/Spam':      'Junk Mail'}.get(folder, folder)
folderfilter = lambda folder: folder not in ['[Gmail]/Important', '[Gmail]/Starred']
